@model MachineAccounting.Web.Models.MachineListViewModel

@{
    ViewData["Title"] = "Оборудование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Оборудование</h2>

<p>
    <a asp-action="Create"><i class="fas fa-plus"></i> Добавить</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>Название</th>
        <th>Количество</th>
        <th width="100px">Склад</th>
        <th>Тип</th>
        <th width="100px">Цена</th>
        <th width="100px"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Storage.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MachineType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fas fa-edit" title="Редактировать"></i>
                </a>
                @if (item.Rest > 0)
                {
                    <a asp-action="Buy" asp-route-id="@item.Id">
                        <i class="fas fa-shopping-cart" title="Купить"></i>
                    </a>
                }
                |
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <i class="fas fa-ban" title="Удалить"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>